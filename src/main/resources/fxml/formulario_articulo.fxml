<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="datarsians.vista.javafx.FormularioArticuloController">
    <VBox spacing="10" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
        <padding>
            <Insets top="10" right="10" bottom="10" left="10"/>
        </padding>
        <Label text="Formulario de Artículo" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

        <GridPane hgap="10" vgap="10">
            <Label text="Código:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="txtCodigo" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <Label text="Descripción:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextField fx:id="txtDescripcion" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <Label text="Precio Venta:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <TextField fx:id="txtPrecio" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

            <Label text="Gastos Envío:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <TextField fx:id="txtGastosEnvio" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

            <Label text="Tiempo Preparación (min):" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
            <Spinner fx:id="spinnerTiempo" GridPane.rowIndex="4" GridPane.columnIndex="1" editable="true"/>
        </GridPane>

        <HBox spacing="10">
            <Button fx:id="btnGuardar" text="Guardar" onAction="#guardarArticulo"/>
            <Button text="Cancelar" onAction="#cerrarVentana"/>
        </HBox>
    </VBox>
</AnchorPane>