<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="datarsians.vista.javafx.MenuPrincipalController"
            prefWidth="660" prefHeight="400"
            style="-fx-background-color: linear-gradient(to bottom, #e3f2fd, #ffffff);">

    <top>
        <Label text="Gestión de Clientes y Pedidos"
               style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #1e4d7b; -fx-padding: 30 0 -70 0;"
               BorderPane.alignment="CENTER"/>
    </top>

    <center>
        <VBox spacing="20" alignment="CENTER"
              style="-fx-padding: 20;">
            <Button text="Gestionar Clientes"
                    prefWidth="300"
                    onAction="#abrirGestionClientes"
                    style="-fx-background-color: #1e88e5; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-padding: 15 30; -fx-font-size: 16px;" />

            <Button text="Gestionar Artículos"
                    prefWidth="300"
                    onAction="#abrirGestionArticulos"
                    style="-fx-background-color: #1e88e5; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-padding: 15 30; -fx-font-size: 16px;" />

            <Button text="Gestionar Pedidos"
                    prefWidth="300"
                    onAction="#abrirGestionPedidos"
                    style="-fx-background-color: #1e88e5; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-padding: 15 30; -fx-font-size: 16px;" />
        </VBox>
    </center>

</BorderPane>

